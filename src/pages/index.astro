---
import BaseLayout from "../layouts/BaseLayout.astro"
import SocialCard from "../components/SocialCard.astro"

const profiles = await fetch('https://randomuser.me/api/?results=6').then(res => res.json())
---

<BaseLayout>
  {profiles.results.map(profile => (
    <SocialCard
      name={`${profile.name.first} ${profile.name.last}`}
      picture={profile.picture.large}
      address={`${profile.location.city}, ${profile.location.country}`}
    />
  ))}
</BaseLayout>
